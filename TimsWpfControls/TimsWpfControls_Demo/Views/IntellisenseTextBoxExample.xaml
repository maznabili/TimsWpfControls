<UserControl x:Class="TimsWpfControls_Demo.Views.IntellisenseTextBoxExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:TimsWpfControls;assembly=TimsWpfControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimsWpfControls_Demo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:TimsWpfControls_Demo.Model"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <local:ExampleViewBase x:Name="ExampleViewBase">
        <ctrls:IntellisenseTextBox x:Name="IntellisenseTextBox" 
                                   AcceptsReturn="True"  
                                   ContentAssistSource="{x:Static model:MainViewModel.IntellisenseSource}" 
                                   SuffixAfterInsert=" " 
                                   Delimiter=" ;/|"/>
    </local:ExampleViewBase>
</UserControl>
