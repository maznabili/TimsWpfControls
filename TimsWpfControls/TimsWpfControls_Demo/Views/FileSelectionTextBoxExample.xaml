<UserControl x:Class="TimsWpfControls_Demo.Views.FileSelectionTextBoxExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimsWpfControls_Demo.Views"
             xmlns:ctrls="clr-namespace:TimsWpfControls;assembly=TimsWpfControls" xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:ExampleViewBase x:Name="ExampleView" xml:space="preserve">
        <local:ExampleViewBase.ExampleXaml ><![CDATA[<ctrls:FileSelectionTextbox 
            VerticalAlignment="[VerticalAlignment]" 
            BorderThickness="[BorderThickness]"/>]]>
        </local:ExampleViewBase.ExampleXaml>
        
        <ctrls:FileSelectionTextBox x:Name="fileSelectionTextBox" 
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center" 
                                    Margin="5"/>
        
    </local:ExampleViewBase>
</UserControl>
